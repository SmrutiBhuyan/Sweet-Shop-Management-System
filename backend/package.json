{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend API for Sweet Shop Management System",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "seed": "node src/utils/seedData.js",
    "seed:users": "node src/utils/seedUsers.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:unit": "jest --testPathPattern=\"*Model.test.js|*Middleware.test.js|validation.test.js\"",
    "test:integration": "jest --testPathPattern=\"auth.test.js|sweet.test.js\"",
    "test:e2e": "jest --testPathPattern=\"e2e.test.js\"",
    "test:security": "jest --testPathPattern=\"security.test.js\"",
    "test:performance": "jest --testPathPattern=\"performance.test.js\" --testTimeout=60000",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:parallel": "jest --maxWorkers=4",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:security",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:security && npm run test:performance",
    "pretest": "node -e \"if (process.env.NODE_ENV !== 'test') { console.error('Tests must be run with NODE_ENV=test'); process.exit(1); }\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.6.4",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
